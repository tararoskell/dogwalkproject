<h1>List of Dog Walks</h1>

 <table class="table table-striped">
  <thead>
	<th>Town</th>
    <th>County</th>
    <th>Distance km</th>
    <th>Image</th>
    <th>Added by</th>
    <th></th>
    <th></th>
  </thead>
<tbody>
<% @dog_walks.each do |dog_walk| %>
  <tr>
    <td><%= dog_walk.town %></td>
    <td><%= dog_walk.county %></td>
    <td><%= dog_walk.distance %></td>
    <td><%= image_tag dog_walk.image(:thumb) %></td>
    <td><%= dog_walk.user.name %></td>
    <td><%= link_to 'Show', dog_walk %></td>
    <% if current_user == dog_walk.user %>
    <td><%= link_to 'Edit', edit_dog_walk_path(dog_walk) %></td>
    <td><%= link_to 'Destroy', dog_walk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
 </tbody>
</table>

<br />

<%= link_to 'New Dog walk', new_dog_walk_path %>
